<div class="container">
<div class="mx-auto mt-5">
  <h5 class="text-left pb-4">
  	<span style="background-color:#f5f5f5">　商品編集　</span>
  </h5>

	<%= form_with model: @item, url: admin_item_path(@item.id), local: true do |f| %>

  <div class="row">
  	<div class="col-md-8">
    	<table class="table table-borderless">
				<tr>
					<th class="col-md-3">
						商品画像
					</th>
					<td>
						<%= f.file_field :image, accept: "image/*" %>	
					</td>
				</tr>
				<tr>
					<th class="col-md-3">
	 					商品名
	 				</th>
	 				<td>
	 					<%= f.text_field :name, :size =>"30" %>
	 				</td>
	 			</tr>
	 			<tr>
	 				<th class="col-md-3">
	   				商品説明
	   			</th>
	   			<td>
	   				<%= f.text_area :introduction, :size =>"30x10" %>
	   			</td>
	   		</tr>
	   		<tr>
	   			<th class="col-md-3">
	   				ジャンル
	   			</th>
	   			<td>
	   				<%= f.collection_select(:name, @genres, :id, :name) %>
	   			</td>
				</tr>
	   		<tr>
	       	<th class="col-md-3">
	       		税抜価格
	       	</th>
	       	<td>
	       		<%= f.text_field :price %>
	       	</td>
	   		</tr>
	   		<tr>
	       	<th class="col-md-3">
	       		販売ステータス
	       	</th>
	       	<td>
	      		<%= f.radio_button :is_active, :true %>
	       		<%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
	       		<%= f.radio_button :is_active, :false %>
	       		<%= f.label :is_active, "販売休止中", {value: :false, style: "display: inline-block;"} %>
	       	</td>
	   	</tr>
	    <tr>
	    	<th colspan="2">
	    		<%= f.submit "変更を保存", class:"btn btn-success" %>
					<% end %>
	    	</th>
	    </tr>
	  </table>
	  
	  	 
		</div>
	  </div>
 </div>
 </div>