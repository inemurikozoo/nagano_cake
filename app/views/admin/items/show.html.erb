<div class="container">
<div class="mx-auto mt-5">
  <h5 class="text-left pb-4">
  	<span style="background-color:#f5f5f5">　商品詳細　</span>
  </h5>

    <div class="row">
    	<%= image_tag @item.get_image %>
    	<div class="col-md-10">
     		<table class="table table-borderless">
		 				<tr>
		 					<th>
		 						商品名
		 					</th>
		 					<td>
		 						<%= @item.name %>
		 					</td>
		 				</tr>
		 				<tr>
		 					<th>
		 						商品説明
		 					</th>
		 					<td>
		 						<%= @item.introduction %>
		 					</td>
		 				</tr>
		 				<tr>
		 					<th>
	        			ジャンル
	        		</th>
	        		<td>
	        			<%= @item.genre.name %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        			税込価格
	        			（税抜価格）
	        		</th>
	        		<td>
	        		<p><%= @item.price.to_s(:delimited) %> (<%= tax_in_price(@item.price).to_s(:delimited) %>)円</p>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   販売ステータス
	        		</th>
	        		<td>
	        		  <strong>
	        		  <% if @item.is_active == true %>
                  <p class="text-success font-weight-bold">販売中</p>
                <% else %>
                  <p class="text-secondary font-weight-bold">販売停止中</p>
                <% end %>
	        			</strong>
	        		</td>
	        	</tr>
	       </table>
	       <div class="row justify-content-center">
	       		<a class="btn btn-success" href="edit_admin_item_path" role="button">編集する</a>
	       </div>
	 </div>
</div>
</div>
</div>