<div class="col-md-10 mx-auto mt-5">
  <h5 class="text-left pb-4">
  	<span style="background-color:#f5f5f5">　注文履歴詳細　</span>
  </h5>

    <div class="row">
    	
     		<table class="table table-borderless">
		 				<tr>
		 					<th>
		 						<strong>購入者</strong>
		 					</th>
		 					<td>
		 						<%= full_name(@order.customer) %>
		 					</td>
		 				</tr>
		 				<tr>
		 					<th>
		 						<strong>注文日</strong>
		 					</th>
		 					<td>
		 						<%= @order.created_at.strftime('%Y/%m/%d') %>
		 					</td>
		 				</tr>
		 				<tr>
		 					<th>
	        			<strong>配送先</strong>
	        		</th>
	        		<td>
	        			<%= @order.address %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        			<strong>支払方法</strong>
	        		</th>
	        		<td>
	        			<%= @order.pay_type_i18n %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        			<strong>注文ステータス</strong>
	        		</th>
	        		<td>
	        			<%= form_with model: @order, url: , local: true do |f| %>
	        				<%= f.select :status, options_for_select(Order.statuses_i18n.invert) %>
	        				<%= f.submit "更新", class:"btn btn-success btn-sm" %>
	        		</td>
	        	</tr>
	        </table>
					<% end %>
	
	  <table class="table table-hover px-auto">
    <thead class="thead-light">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
        <th></th>
      </tr>
    </thead>
  	 	<% @order_item.each do |order_item| %>
     	<tr>
       <td class="text-left col-md-3">
        <%= order_item.item.name %>
      </td>
      <td class="col-md-2">
        <%= tax_in_price(order_item.price).to_s(:delimited) %>
      </td>
      <td class="col-md-1">
        <%= order_item.amount %>
      </td>
      <td class="col-md-1">
        <%= subtotal(order_item).to_s(:delimited) %>
      </td>
      <td class="col-md-3">
      	<!--製作ステータスの更新-->
      	<%= form_with model: @order_item, url: admin_path(@order_items.id), local: true do |f| %>
        	<%= f.select :status, options_for_select(OrderItem.statuses_i18n.invert), class: "form-control" %>
        	<%= f.submit "更新", class:"btn btn-success btn-sm" %>
        <% end %>
      </td>
    </tr>

    	<% end %>

  </tbody>
  </table>
 </div>
</div>