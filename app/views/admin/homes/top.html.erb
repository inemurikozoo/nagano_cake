
<div class="col-md-6 mx-auto mt-5">
  <h5 class="text-left pb-4"><span style="background-color:#f5f5f5">　注文履歴一覧　</span></h5>
  <div class="container">  
    <table class="table table-hover px-auto">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
  <tbody>
    <%= @customers.each do |customer| %>
      <% customer.orders.each do |order| %>
    <tr>
      <td>
        <%= link_to customer.order.created_at, admin_path(customer.id) %>
      </td>
      <td>
            <%= customer.last_name & customer.first_name %>
      </td>
      <%= order.order_items.each do |order_item| %>  
      <td>
           <%= order_item.amount %> 
      </td>
      <td>

      </td>
      <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
</div>
