
 

<!--全ての注文履歴-->
<div class="col-md-8 mx-auto mt-5">
  <h5 class="text-left pb-4"><span style="background-color:#f5f5f5">　注文履歴一覧　</span></h5>
  <div class="container">
    <table class="table table-hover px-auto">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="col-md-3">
              <%= link_to order.created_at, admin_path(order.id) %>
            </td>
            <td class="col-md-3">
              <%= full_name(order.customer) %>
            </td>
            <td class="col-md-3">
              <%= order.order_items.sum(:amount) %>
            </td>
            <td class="col-md-3">
              <%= order.status_i18n %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </tbody>
    <%= paginate @orders %>
  </div>
  </div>


