
<div class="col-md-8 mx-auto mt-5">
  <h5 class="text-left pb-4"><span style="background-color:#f5f5f5">　注文履歴一覧　</span></h5>
  <div class="container">  
    <table class="table table-hover px-auto">
    <thead class="thead-light">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
  <tbody>
    <% @orders.each do |order| %>
     <tr>
      <td class="col-md-3">
        <%= link_to order.created_at, admin_path(order.customer.id) %>
      </td>
      <td class="col-md-3">
            <%= order.customer.last_name %><%= order.customer.first_name %>
      </td>
      
      <td class="col-md-3">
           "注文ごとの合計数量”
      </td>
      <td class="col-md-3">
            <%= order.status %>
      </td>
      
      
    </tr>
    
    <% end %>
    
  </tbody>
  </table>
  <%= paginate @orders %>
  
</div>
</div>
