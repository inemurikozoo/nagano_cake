<div class="container">
<div class="mx-auto mt-5">
  <h5 class="text-left pb-4">
  	<span style="background-color:#f5f5f5">
  		　<%= full_name(@customer) %>さんの会員情報編集　
  	</span>
  </h5>

    <%= form_with model: @customer, url: admin_customer_path(@customer.id), local: true do |f| %>
    
    <div class="row">
    	<div class="col-md-12">
     		<table class="table table-borderless">
		 				<tr>
		 					<th>
		 						会員ID
		 					</th>
		 					<td>
		 						<%= @customer.id %>
		 					</td>
		 				</tr>
		 				<tr>
		 					<th>
		 						氏名
		 					</th>
		 					<td>
		 						<%= f.text_field :last_name %>  <%= f.text_field :first_name %>
		 					</td>
		 				</tr>
		 				<tr>
		 					<th>
	        			フリガナ
	        		</th>
	        		<td>
	        			<%= f.text_field :last_name_kana %>  <%= f.text_field :first_name_kana %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        			郵便番号
	        		</th>
	        		<td>
	        		<p><%= f.text_field :postal_code %></p>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   住所
	        		</th>
	        		<td>
	        		  <%= f.text_field :address, size: 60 %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   電話番号
	        		</th>
	        		<td>
	        		  <%= f.text_field :telephone_number %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   メールアドレス
	        		</th>
	        		<td>
	        		  <%= f.text_field :email %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   会員ステータス
	        		</th>
	        		<td>
	        		  <strong>
	        		  <%= f.radio_button :is_active, :true %>
	       		    <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
	       		    <%= f.radio_button :is_active, :false %>
	       		    <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %>
	        		</strong>
	        		</td>
	        	</tr>
	       </table>
	       <div class="row justify-content-center">
	       			<%= f.submit "変更を保存", class:"btn btn-success" %>
					   <% end %>
	       		</div>
	       </div>
	 </div>
</div>
</div>
</div>