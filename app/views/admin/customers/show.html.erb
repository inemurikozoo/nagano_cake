<div class="container">
<div class="mx-auto mt-5">
  <h5 class="text-left pb-4">
  	<span style="background-color:#f5f5f5">
  		　<%= full_name(@customer) %>さんの会員詳細
  	</span>
  </h5>

    <div class="row">
    	<div class="col-md-12">
     		<table class="table table-borderless">
		 				<tr>
		 					<th>
		 						会員ID
		 					</th>
		 					<td>
		 						<%= @customer.id %>
		 					</td>
		 				</tr>
		 				<tr>
		 					<th>
		 						氏名
		 					</th>
		 					<td>
		 						<%= @customer.last_name %>  <%= @customer.first_name %>
		 					</td>
		 				</tr>
		 				<tr>
		 					<th>
	        			フリガナ
	        		</th>
	        		<td>
	        			<%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        			郵便番号
	        		</th>
	        		<td>
	        		<p><%= @customer.postal_code %></p>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   住所
	        		</th>
	        		<td>
	        		  <%= @customer.address %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   電話番号
	        		</th>
	        		<td>
	        		  <%= @customer.telephone_number %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   メールアドレス
	        		</th>
	        		<td>
	        		  <%= @customer.email %>
	        		</td>
	        	</tr>
	        	<tr>
	        		<th>
	        		   会員ステータス
	        		</th>
	        		<td>
	        		  <strong>
	        		  <% if @customer.is_active == true %>
                  <p class="text-success font-weight-bold">有効</p>
                <% else %>
                  <p class="text-secondary font-weight-bold">退会</p>
                <% end %>
	        		</strong>
	        		</td>
	        	</tr>
	       </table>
	       <div class="row justify-content-center">
	       		<div class="col-md-4">
	       			<%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-success' %>
	       		</div>
	       		<div class="col-md-4 offset-md-1">
	       			<%= link_to "注文履歴一覧を見る", admin_root_path, class: 'btn btn-primary' %>
	       		</div>
	       </div>
	 </div>
</div>
</div>
</div>