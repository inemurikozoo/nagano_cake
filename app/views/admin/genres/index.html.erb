<div class="container">
  <div class="mx-auto mt-5">
    <h5 class="text-left pb-4">
  	  <span style="background-color:#f5f5f5">　ジャンル一覧・追加　</span>
    </h5>

      <%= form_with model: @genre, local: true do |f| %>
        <label for="genreNew">ジャンル名</label>
        <%= f.text_field :name, id="genreNew" %>
        <%= f.submit "新規登録", class="btn btn-success" %>
      <% end %>
      
    <table class="table table-hover px-auto">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
         <tr>
          <td class="col-md-3">
            <%= genre.name %>
          </td>
          <td class="col-md-2">
            <%= f.submit "編集する", class="btn btn-success" %>
        <% end %>
          </td>
        </tr>
      </tbody>
    </table>

  </div>
</div>
