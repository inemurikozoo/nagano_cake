<div class="container">
  <div class="mx-auto mt-5">
    <h5 class="text-left pb-4">
  	  <span style="background-color:#f5f5f5">　ジャンル一覧・追加　</span>
    </h5>
      <!--新規登録フォーム-->
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
        <label for="genreNew">ジャンル名</label>
        <%= f.text_field :name, id:"genreNew" %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
      <% end %>
    
    <!--ジャンル一覧-->
    <div class="row pt-5">  
    <table class="table table-hover px-auto">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
         <tr>
          <td class="col-md-1">
            <%= genre.name %>
          </td>
          <td class="col-md-2">
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
      
    </div>  
  </div>
</div>
