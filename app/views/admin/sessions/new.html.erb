<div class="container-fluid">

<!--<%= form_for(resource, as: resource_name, url: admin_session_path) do |f| %>-->
<%= form_with model: Admin.new, url: admin_session_path, method: :post, local: true do |f| 

  <div class="col-md-10 mx-auto mt-5">
  <h5 class="head-line pb-4">
    <span style="background-color:#f5f5f5">　管理者ログイン　</span>
  </h5>

  <div class="field">

    <div class="form-group">
    <%= f.label :email, "メールアドレス　　" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>
  </div>

  <div class="field">

    <div class="form-group">
    <%= f.label :password, "パスワード　　　　" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
  <%= render "admin/shared/links" %>

  </div>