<div class="container">
  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-9">
      <h1 class="py-4">商品一覧<span>(全<%= @items.total_count %>件)</span></h1>

        <% @items.each do |item| %>

        <div class="d-flex aline-items-start">
          
          <%= image_tag item.get_image, size: "300x300" %>
          <p><strong><%= item.name %></strong></p>
          <p><strong>￥<%= item.price.to_s( :delimited) %></strong></p>
        </div>


        <% end %>
    </div>
  <%= paginate @items %>

