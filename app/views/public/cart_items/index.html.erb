<div class="col-md-11 mx-auto mt-5">
  <h5 class="pb-4">
    <div class="row">
      <div class="col-3">
  	    <span style="background-color:#f5f5f5">
  	      ショッピングカート　
  	    </span>
  	  </div>
  	  <div class="col-3 offset-6">
  	    <% 
  	  </div>
  	</div>
  </h5>
  
  <div class="row">  
    <table class="table table-hover px-auto">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
         <tr>
          <td class="w-60">
            <%= cart_item.item.name %>
          </td>
          <td class="w-20">
            <%= cart_item.item.price %>
          </td>
          <td class="w-20">
            <%= form_with model: @cart_item, method: :patch do |f| %>
            <%= f.select :amount, options_for_select( %>
          </td>
          <td class="w-20">
            <%= cart_item.item.price * cart_item.amount %>
          </td>
          <td class="w-20">
            <%= link_to "削除する", url：root_path class:"btn btn-danger" %> <!--仮のpathです-->
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
      
    </div>  
  </div>