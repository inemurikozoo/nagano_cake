<div class="col-md-11 mx-auto mt-5">
  <h5 class="pb-4">
    <div class="row">
      <div class="col-4">
  	    <span style="background-color:#f5f5f5">
  	  　 注文履歴一覧　
  	    </span>
  	  </div>
  	</div>
  </h5>

<% if @orders.present? %>
  <div class="row">
    <table class="table table-bordered border-dark table-hover px-auto">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
    <tbody>
        <% @orders.each do |order| %>
         <tr>
          <td class="w-20"><!-- 注文日-->
            <%= order.created_at %>
          </td>
          <td class="w-60"><!-- 配送先-->
            <%= "〒" + order.postal_code %><%= order.address%><br/>
            <%= order.name %>
          </td>
          <td class="w-20"><!-- 注文商品-->
            <% order.order_items each do |order_item| %>
              <%= order_item.item.name %>
            <% end %>
          </td>
          <td class="w-10"><!-- 支払金額-->
            <%= (order.payment_amount).to_s(:delimited) + "円" %>
          </td>
          <td class="w-20"><!--ステータス -->
            <%= order.status %>
          </td>
           <td class="w-20"><!--注文詳細 -->
            <%= link_to "表示する", _items_path(order), method: :delete, class:"btn btn-danger btn-sm" %>
          <% end %>
          </td>

        </tr>
      </tbody>
    </table>
  <% else %>
    <p>注文履歴はありません</p>
  <% end %>
  </div>
</div>