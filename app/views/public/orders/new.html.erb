<div class="col-md-11 mx-auto mt-5">
  <h5 class="pb-4">
    <span style="background-color:#f5f5f5">
        注文情報入力　
    </span>
  </h5>
    <%= form_with model: @order, method: :post, url: new_order_path, method: :post, local: true do |f| %>
      <strong>支払方法</strong><br />
      <%= f.radio_button :pay_type, '0' %>
	   	<%= f.label :pay_type, "クレジットカード", {value: '0', style: "display: inline-block;"} %><br />
	   	<%= f.radio_button :pay_type, '1' %>
	   	<%= f.label :pay_type, "銀行振込", {value: '1', style: "display: inline-block;"} %><br />
      <strong>お届け先</strong><br />
      <%= f.radio_button  %>
	   	<%= f.label :address, "ご自身の住所", {style: "display: inline-block;"} %><br />
	   	<%= f.radio_button :address %>
	   	  <%= f.label :address, "登録済み住所から選択", {style: "display: inline-block;"} %><br />
        <%= f.select :address  %>
	   	<%= f.label , "新しいお届け先", {style: "display: inline-block;"} %><br />
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code, autocomplete: "0000000" %>
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, autocomplete: "東京都渋谷区代々木神園町0-0" %>
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name, autocomplete: "令和道子" %>
    <% end %>
    
</div>
