<div class="col-md-11 mx-auto mt-5">
  <h5 class="pb-4">
    <span style="background-color:#f5f5f5">
      配送先登録/一覧
    </span>
  </h5>
  
  <%= form_with model: @address, method: :post do |f| %>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %>
    
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %>
    
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>
    
    <%= f.submit "新規登録" %>
  <% end %>
  
  <div class="row">  
    <table class="table table-hover px-auto">
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
         <tr>
          <td class="w-20">
            <%= address.postal_code %>
          </td>
          <td class="w-60">
            <%= address.address %>
          </td>
          <td class="w-20">
            <%= address.name %>
          </td>
          <td class="w-50">
            <%= link_to "編集する" %>
            <%= link_to "削除する" %>
          </td>
        </tr>
      </tbody>
    </table>