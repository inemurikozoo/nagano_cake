<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto mt-5">
      <h5 class="pb-4">
        <span style="background-color:#f5f5f5">
        　配送先登録/一覧　
        </span>
      </h5>

  <%= form_with model: @address, url: addresses_create_path, method: :post do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    </div>
    <div class="col-md-5">
      <%= f.text_field :postal_code, placeholder: "0000000" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-md-5">
      <%= f.text_field :address, size: "40", placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :name, "宛名" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, placeholder:"令和道子" %>
    </div>
    <div class="col-md-2">
      <%= f.submit "新規登録", class:"btn btn-sm btn-success" %>
    </div>
  </div>
  <% end %>

  <!-- 配送先が登録されているかを判断する　-->
  <% if current_customer.addresses.present? %>

  <div class="row">
    <table class="table table-hover table-bordered px-auto">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
      <tbody>
        <% @addresses.each do |address| %>
         <tr>
          <td class="w-20">
            <%= address.postal_code %>
          </td>
          <td class="w-60">
            <%= address.address %>
          </td>
          <td class="w-20">
            <%= address.name %>
          </td>
          <td class="w-50">
            <%= link_to "編集する", addresses_edit_path(address.id), class:"btn btn-sm btn-success" %>
            <%= link_to "削除する", addresses_destroy_path(address.id), method: :delete, class:"btn btn-sm btn-danger", data: {confirm: "削除します。よろしいですか？"} %>
            </td>
         </tr>
        <% end %>
        </tbody>
      </table>
  </div>
  <% else %>
  <div class="row pt-5">
    <p>登録されている配送先はまだありません。</p>
  <% end %>
  </div>
</div>
</div>
</div>