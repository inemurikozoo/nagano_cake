<div class="col-md-11 mx-auto mt-5">
  <h5 class="pb-4">
    <span style="background-color:#f5f5f5">
      マイページ
    </span>
  </h5>

  <h5><strong>登録情報</strong></h5>
  <%= link_to customer_edit_path(@customer.id), class: "btn btn-success" %>編集する<% end %>
  <table class="table table-bordered border border-secondary py-5">
    <tr>
      <th class="table-secondary">
        氏名
      </th>
      <td>
        <%= @customer.last_name %>
      </td>
    </tr>
    <tr>
      <th class="table-secondary">
        カナ
      </th>
      <td>
        <%= @customer.last_name_kana %>
      </td>
    </tr>
    <tr>
      <th class="table-secondary">
        郵便番号
      </th>
      <td>
        <%= @customer.postal_code %>
      </td>
    </tr>
    <tr>
      <th class="table-secondary">
        住所
      </th>
      <td>
        <%= @customer.address %>
      </td>
    </tr>
    <tr>
      <th class="table-secondary">
        電話番号
      </th>
      <td>
        <%= @customer.telephone_number %>
      </td>
    </tr>
    <th class="table-secondary">
      メールアドレス
    </th>
    <td>
      <%= @customer.email %>
    </td>
  </table>

<h5><strong>配送先</strong></h5>

<%= link_to url: addresses_path, class: 'btn btn-primary' do %>一覧を見る<% end %>

<h5><strong>注文履歴</strong></h5>

<%= link_to url: "#", class: 'btn btn-primary' do %>一覧を見る<% end %>